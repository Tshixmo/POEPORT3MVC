@model ClaimSystemMVC.Models.ClaimModel

<h2>Submit a Claim</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Hours Worked:</label>
        <input asp-for="HoursWorked" type="number" min="1" required />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>
    <div>
        <label>Hourly Rate:</label>
        <input asp-for="HourlyRate" type="number" step="0.01" min="1" required />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="AdditionalNotes">Additional Notes</label>
        <textarea class="form-control" asp-for="AdditionalNotes" rows="4"></textarea>
    </div>
    <div class="form-group">
        <label for="SupportingDocumentPath">Upload Supporting Document</label>
        <input type="file" class="form-control" asp-for="SupportingDocumentPath" />
        <span asp-validation-for="SupportingDocumentPath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
