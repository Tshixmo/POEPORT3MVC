@model IEnumerable<ClaimSystemMVC.Models.ClaimModel>

<h2>Admin Dashboard - Pending Claims</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer ID</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
         {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.LecturerId</td>
                <td>@claim.Amount</td>
                <td>@claim.Status</td>
                <td>
                    <form asp-action="Approve" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <!-- Redirect to Reject Reason Page -->
                    <a href="@Url.Action("Reject", new { id = claim.ClaimId })" class="btn btn-danger">Reject</a>
                </td>
            </tr>
         }
    </tbody>
</table>
